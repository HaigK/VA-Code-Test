<body>
  <div class="container">
    <h1>VA Benefits Assistant</h1>
    <p>Ask a question about your VA benefits.</p>
    <div>
      <input type="text" id="question" placeholder="e.g. What benefits do I qualify for?" />
      <button onclick="ask()">Ask</button>
    </div>
    <div id="response">Awaiting your question...</div>
  </div>

  <script>
    async function ask() {
      const input = document.getElementById('question');
      const resBox = document.getElementById('response');
      const question = input.value.trim();

      if (!question) return;

      resBox.textContent = 'Thinking...';

      try {
        const response = await fetch("https://api.openai.com/v1/chat/completions", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "Authorization": "Bearer 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" // replace this
          },
          body: JSON.stringify({
            model: "gpt-3.5-turbo",
            messages: [{ role: "user", content: question }],
            temperature: 0.7
          })
        });

        const data = await response.json();
        const reply = data.choices?.[0]?.message?.content || "No response from OpenAI.";

        resBox.textContent = reply;
      } catch (err) {
        resBox.textContent = "Something went wrong. Check the console.";
        console.error(err);
      }
    }
  </script>
</body>
