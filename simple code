<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>VA Search Bar</title>
  <style>
    body { font-family: sans-serif; padding: 2em; background: #f9f9f9; }
    input, button { padding: 0.5em; font-size: 1em; }
    #response { margin-top: 1em; white-space: pre-wrap; background: #eee; padding: 1em; }
  </style>
</head>
<body>
  <h1>VA Search Bar</h1>
  <input type="text" id="question" placeholder="Ask a VA question..." />
  <button onclick="ask()">Submit</button>
  <div id="response">Awaiting your question...</div>

  <script>
    async function ask() {
      const question = document.getElementById('question').value;
      const resBox = document.getElementById('response');

      resBox.textContent = 'Thinking...';

      // Get token from serverless function
      const tokenRes = await fetch('/api/token');
      const { token } = await tokenRes.json();

      const response = await fetch('https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({
          contents: [{ parts: [{ text: question }] }]
        })
      });

      const data = await response.json();
      const output = data?.candidates?.[0]?.content?.parts?.[0]?.text || "No response";

      resBox.textContent = output;
    }
  </script>
</body>
</html>
